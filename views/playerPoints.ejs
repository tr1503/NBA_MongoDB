<% include partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action = "/mongoDB/query11Show" method = "POST">
                <div class="form-group">
                    <label for="player">Player Name</label>
                    <input class="form-control" id="player" type = "text" name = "player" placeholder = "player name" required>
                </div>
                <div class="form-group">
                    <label for="timeSelect">Time Length</label>
                    <select name="time" id="timeSelect" class="selectpicker show-menu-arrow form-control">
                        <option value="month">Monthly Points</option>
                        <option value="season">Seasonal Points</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/mongodb" class="btn btn-primary">Go Back</a>
</div>
<% include partials/footer %>